.Form
  position relative

.Form-element
  margin-bottom 8px
  position relative
  input, textarea
    border none
    border-radius 0
    box-shadow inset 0 0 5px rgba(#4a4a4a, 0.4), 1px 1px 1px #fff
    color #4a4a4a
    line-height 1.5
    padding $input-padding
    width 100%
    &:active, &:focus
      border none
      outline none
  &.is-text-center
    input, textarea
      text-align center
